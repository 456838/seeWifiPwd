<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/cardView"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:orientation="horizontal"
    android:padding="7dp"
    card_view:cardCornerRadius="2dp"
    android:layout_margin="10dip"
    >

    <RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:padding="7dp">

        <ImageView
            android:id="@+id/pic"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:scaleType="centerCrop"
            android:src="@color/holo_blue"/>

        <TextView
            android:id="@+id/ssidTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:clickable="true"
            android:gravity="top|left"
            android:text="海豚社区"
            android:textColor="@color/black"
            android:textSize="25dip"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/pskTv"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/pic"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/ssidTv"
            android:layout_marginLeft="10dip"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:gravity="center|left"
            android:text="156468163"
            android:textColor="@color/grey"
            android:textSize="22dip"
            />

        <TextView
            android:visibility="gone"
            android:id="@+id/tv_add_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/ssidTv"
            android:layout_alignBottom="@+id/ssidTv"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:clickable="true"
            android:gravity="top|right"
            android:text="2015/9/16 18:37"
            android:textColor="@color/error_stroke_color"
            android:textSize="13sp"
            />
    </RelativeLayout>

</android.support.v7.widget.CardView>
